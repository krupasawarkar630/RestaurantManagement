<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="200sp"
            android:layout_height="200sp"
            android:id="@+id/ivProfilePhoto"
            android:src="@drawable/accounticon"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:id="@+id/btnChangeProfile"
        android:text="Change Profile Photo"
        android:background="@color/brown"
        android:textColor="@color/yellow"
        android:fontFamily="@font/adamina"
        android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:id="@+id/tvFullName"
            android:text="  Full Name"
            android:fontFamily="@font/adamina"
            android:textSize="20sp"
            android:layout_margin="20sp"
            android:textStyle="bold"
            android:inputType="text"
            android:background="@drawable/etbgshape"
            android:drawableLeft="@drawable/icon_user"
            android:paddingLeft="10sp"
            android:gravity="center_vertical"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:id="@+id/tvPhone"
            android:text="  Phone"
            android:fontFamily="@font/adamina"
            android:textSize="20sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:textStyle="bold"
            android:inputType="text"
            android:background="@drawable/etbgshape"
            android:drawableLeft="@drawable/icon_call"
            android:paddingLeft="10sp"
            android:gravity="center_vertical"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:id="@+id/tvEmailId"
            android:text="  Email-Id"
            android:fontFamily="@font/adamina"
            android:textSize="20sp"
            android:layout_margin="20sp"
            android:textStyle="bold"
            android:inputType="text"
            android:background="@drawable/etbgshape"
            android:drawableLeft="@drawable/icon_email"
            android:paddingLeft="10sp"
            android:gravity="center_vertical"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:id="@+id/tvUserName"
            android:text="  User Name"
            android:fontFamily="@font/adamina"
            android:textSize="20sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:textStyle="bold"
            android:inputType="text"
            android:background="@drawable/etbgshape"
            android:drawableLeft="@drawable/icon_user"
            android:paddingLeft="10sp"
            android:gravity="center_vertical"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:id="@+id/tvPassword"
            android:text="  Password"
            android:fontFamily="@font/adamina"
            android:textSize="20sp"
            android:layout_margin="20sp"
            android:textStyle="bold"
            android:inputType="text"
            android:background="@drawable/etbgshape"
            android:drawableLeft="@drawable/icon_password"
            android:paddingLeft="10sp"
            android:gravity="center_vertical"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:id="@+id/cvGender"
        app:cardCornerRadius="20sp"
        app:cardElevation="12sp">
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:id="@+id/spinnerGender"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            android:background="@android:drawable/btn_dropdown"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableRight="@drawable/icon_dropdown"
            android:layout_gravity="right|center"
            android:layout_marginRight="14sp" />
    </androidx.cardview.widget.CardView>


    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_margin="20sp"
        android:id="@+id/btnUpdateProfile"
        android:text="Edit Profile"
        android:background="@color/brown"
        android:textColor="@color/yellow"
        android:fontFamily="@font/adamina"
        android:textStyle="bold"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvMyProfileToken"
        android:text=""
        android:textColor="@color/brown"
        android:textSize="12sp"
        android:textIsSelectable="true" />
    </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>