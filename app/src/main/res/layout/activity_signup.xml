<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SignUp"
    android:background="@drawable/backgroundimage">

    <ImageView
        android:layout_width="230sp"
        android:layout_height="100sp"
        android:id="@+id/ivlogo"
        android:src="@drawable/logo"
        android:layout_gravity="center"
        android:layout_marginTop="35sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/adamina"
        android:text="Already a member? "
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign in"
        android:id="@+id/tvSignin"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:fontFamily="@font/adamina"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cdNewUser"
        app:cardElevation="8sp"
        app:cardCornerRadius="20sp"
        android:layout_margin="20sp"
        android:padding="14sp"
        android:gravity="center"
        app:cardBackgroundColor="@color/Light_brown">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/bgcvsignup">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:id="@+id/etFullName"
                android:hint="Full Name"
                android:fontFamily="@font/adamina"
                android:textSize="20sp"
                android:layout_marginTop="14sp"
                android:layout_marginLeft="14sp"
                android:layout_marginRight="14sp"
                android:textStyle="bold"
                android:inputType="text"
                android:background="@drawable/etbgshape"
                android:drawableLeft="@drawable/icon_user"
                android:paddingLeft="8sp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:id="@+id/etUsername"
                android:hint="UserName"
                android:fontFamily="@font/adamina"
                android:textSize="20sp"
                android:layout_marginTop="14sp"
                android:layout_marginLeft="14sp"
                android:layout_marginRight="14sp"
                android:textStyle="bold"
                android:inputType="text"
                android:background="@drawable/etbgshape"
                android:drawableLeft="@drawable/icon_user"
                android:paddingLeft="8sp"/>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:id="@+id/etSignupemail"
                android:hint="@string/email"
                android:fontFamily="@font/adamina"
                android:textSize="20sp"
                android:layout_marginTop="14sp"
                android:layout_marginRight="14sp"
                android:layout_marginLeft="14sp"
                android:textStyle="bold"
                android:inputType="textEmailAddress"
                android:background="@drawable/etbgshape"
                android:drawableLeft="@drawable/icon_email"
                android:paddingLeft="8sp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:id="@+id/etPhone"
                android:hint="Contact number"
                android:fontFamily="@font/adamina"
                android:textSize="20sp"
                android:layout_marginTop="14sp"
                android:layout_marginRight="14sp"
                android:layout_marginLeft="14sp"
                android:textStyle="bold"
                android:inputType="number"
                android:maxLength="10"
                android:background="@drawable/etbgshape"
                android:drawableLeft="@drawable/icon_call"
                android:padding="8sp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:id="@+id/etSignupPassword"
                android:drawableLeft="@drawable/icon_password"
                android:hint="@string/password"
                android:fontFamily="@font/adamina"
                android:textSize="20sp"
                android:layout_margin="14sp"
                android:textStyle="bold"
                android:inputType="textPassword"
                android:background="@drawable/etbgshape"
                android:drawableRight="@drawable/eyeinvisible"
                android:padding="8sp"/>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:id="@+id/etSignupConfirmPassword"
                android:hint="Confirm Password"
                android:fontFamily="@font/adamina"
                android:textSize="20sp"
                android:layout_marginLeft="14sp"
                android:layout_marginRight="14sp"
                android:textStyle="bold"
                android:inputType="textPassword"
                android:background="@drawable/etbgshape"
                android:drawableLeft="@drawable/icon_password"
                android:padding="8sp"
                android:drawableRight="@drawable/eyeinvisible"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:id="@+id/btnRegister"
                android:background="@color/brown"
                android:layout_gravity="center_horizontal"
                android:text="Sign up"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20sp"
                android:fontFamily="@font/adamina"
                android:layout_margin="14sp"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
