<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactUsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:src="@drawable/aboutus"/>

        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/ImageSlider"
            android:layout_width="match_parent"
            android:layout_height="350sp"
            app:iss_corner_radius="50"
            app:iss_auto_cycle="true"
            app:iss_period="2000"
            app:iss_delay="1000"
            app:iss_no_dots="false"
            app:iss_selected_dot="@drawable/default_selected_dot"
            app:iss_unselected_dot="@drawable/default_unselected_dot"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome To"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginTop="8sp"
            android:textStyle="italic|bold"
            android:fontFamily="@font/adamina"
            android:textColor="@color/dark_brown"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chappan Bhog Restaurant"
            android:layout_gravity="center"
            android:textSize="22sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="8sp"
            android:textStyle="italic|bold"
            android:fontFamily="@font/adamina"
            android:textColor="@color/dark_brown"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="India Restaurant has been serving delightful experiences through
the art of cooking for four decades. A cozy, relaxing space combined
with flavourful dishes makes it a first choice for every foodie in town.
It provides a wide range of items to choose from and lets everyone
indulge in an experience of pleasing their taste buds.
We provides a wide range of cuisines and dishes to choose from
so that every foodie in town has their best experience here.
We are known to be the best Mughlai eatery in Kolkata.
 We have always won the hearts of our customers with appetizing dishes
  and friendly behaviour. It is the best choice for everyone who
  wants to enjoy the best quality food at reasonable prices"
            android:textAlignment="center"
            android:textSize="14sp"
            android:layout_marginLeft="50sp"
            android:layout_marginRight="50sp"
            android:layout_marginTop="8sp"
            android:textStyle="bold"
            android:fontFamily="@font/adamina"
            android:textColor="@color/brown"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:text=" Our Speciality "
            android:textStyle="bold|italic"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:padding="2sp"
            android:background="@color/dark_brown" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We provide a wide range of cuisines and dishes to choose from so that every foodie in town has their best experience with us."
            android:textAlignment="center"
            android:textSize="14sp"
            android:layout_marginLeft="50sp"
            android:layout_marginRight="50sp"
            android:layout_marginTop="8sp"
            android:textStyle="bold"
            android:fontFamily="@font/adamina"
            android:textColor="@color/brown"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40sp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="12sp"
            app:cardMaxElevation="12sp">
        <TextView
            android:layout_width="160sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="20sp"
            android:text=" Our Mission "
            android:textStyle="bold|italic"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:padding="2sp"
            android:textAlignment="center"
            android:background="@color/dark_brown" />
        <TextView
            android:layout_width="180sp"
            android:layout_height="120sp"
            android:text="To help our customers enjoy simple edible
 pleasures and reach their hearts through their stomach."
            android:textStyle="italic"
            android:textSize="14sp"
            android:padding="14sp"
            android:textAlignment="center"
            android:layout_marginTop="60sp"
            android:layout_marginLeft="10sp"
            android:textColor="@color/brown" />
                <ImageView
                    android:layout_width="150sp"
                    android:layout_height="150sp"
                    android:src="@drawable/mission"
                    android:layout_margin="20sp"
                    android:layout_gravity="right"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardMaxElevation="12sp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                    android:layout_width="160sp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:layout_marginRight="20sp"
                    android:layout_marginLeft="190sp"
                    android:text="  Our Vision  "
                    android:textStyle="bold|italic"
                    android:textSize="24sp"
                    android:textColor="@color/white"
                    android:padding="2sp"
                    android:background="@color/dark_brown"
                    android:textAlignment="center" />
                <TextView
                    android:layout_width="185sp"
                    android:layout_height="120sp"
                    android:text="To create an ultimate destination for every food
lover in town and lead them to an extraordinay food journey."
                    android:textStyle="italic"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:layout_marginRight="20sp"
                    android:layout_marginLeft="180sp"
                    android:layout_marginBottom="20sp"
                    android:textColor="@color/brown"
                    android:padding="14sp"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="150sp"
                    android:layout_height="150sp"
                    android:src="@drawable/vission"
                    android:layout_margin="20sp"
                    android:layout_gravity="left" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:text=" Our Restaurant View "
            android:textStyle="bold|italic"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:padding="2sp"
            android:background="@color/dark_brown"
            android:textAlignment="center"
            android:layout_gravity="center" />
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="350sp"
            android:layout_height="wrap_content"
            android:layout_margin="30sp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/restaurant2"
            android:layout_margin="20sp">
        </ImageView>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="350sp"
            android:layout_height="wrap_content"
            android:layout_margin="30sp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/restaurant3"
                android:layout_margin="20sp">
            </ImageView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    </HorizontalScrollView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bgaboutusslider"
            app:cardElevation="12sp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="People Talk"
                android:textSize="14sp"
                android:layout_gravity="center_horizontal"
                android:textStyle="italic|bold"
                android:fontFamily="@font/adamina"
                android:textColor="@color/dark_brown"
                android:layout_marginTop="20sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Our Testimonial"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textStyle="italic|bold"
                android:fontFamily="@font/adamina"
                android:textColor="@color/dark_brown"
                android:layout_marginTop="50sp"/>
        </androidx.cardview.widget.CardView>

        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/feedbackImageSlider"
            android:layout_width="match_parent"
            android:layout_height="350sp"
            app:iss_corner_radius="50"
            app:iss_auto_cycle="true"
            app:iss_period="2000"
            app:iss_delay="1000"
            app:iss_no_dots="false"
            android:layout_margin="25sp"
            app:iss_selected_dot="@drawable/default_selected_dot"
            app:iss_unselected_dot="@drawable/default_unselected_dot"/>
    </LinearLayout>
</ScrollView>