<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AccountFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

  <androidx.cardview.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="90sp"
      app:cardBackgroundColor="@color/brown">
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="My Account"
          android:textColor="@color/yellow"
          android:layout_marginLeft="110sp"
          android:layout_marginTop="30sp"
          android:textSize="20sp" />
      <ImageView
          android:layout_width="90sp"
          android:layout_height="50sp"
          android:src="@drawable/accounticon"
          android:layout_margin="20sp"/>
  </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="20sp">

        <androidx.cardview.widget.CardView
            android:layout_width="0sp"
            android:layout_height="60sp"
            android:layout_weight="1"
            android:id="@+id/cvFavorites"
            android:layout_marginLeft="20sp"
            app:cardElevation="12sp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Favorites    "
                android:textSize="20sp"
                android:fontFamily="@font/adamina"
                android:layout_gravity="bottom"
                android:padding="12sp"
                android:drawableRight="@drawable/icon_favorite"
                android:drawableTint="@color/black" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0sp"
            android:layout_height="60sp"
            android:layout_weight="1"
            android:id="@+id/cvMoney"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            app:cardElevation="12sp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Money    "
                android:textSize="20sp"
                android:fontFamily="@font/adamina"
                android:layout_gravity="bottom"
                android:padding="12sp"
                android:drawableRight="@drawable/icon_rupees"
                android:drawableTint="@color/black"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_margin="20sp"
        app:cardElevation="12sp"
        android:id="@+id/cvMyProfile">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_user"
            android:text="  My Profile"
            android:layout_gravity="center"
            android:layout_margin="10sp"
            android:fontFamily="@font/adamina"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        app:cardElevation="12sp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  My Payments "
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20sp"
            android:fontFamily="@font/adamina"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="QR Scanner"
            android:id="@+id/tvQRScanner"
            android:layout_marginTop="60sp"
            android:layout_marginLeft="20sp"
            android:layout_marginBottom="20sp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="@font/adamina"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bank and Upi Details"
            android:id="@+id/tvBankAndUpi"
            android:layout_marginTop="90sp"
            android:layout_marginLeft="20sp"
            android:layout_marginBottom="20sp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="@font/adamina"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payments and Refunds"
            android:id="@+id/tvPayments"
            android:layout_marginTop="120sp"
            android:layout_marginLeft="20sp"
            android:layout_marginBottom="20sp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="@font/adamina"/>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        app:cardElevation="12sp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  My Activity "
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20sp"
            android:fontFamily="@font/adamina"
            android:textStyle="bold"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Favorite Items"
            android:id="@+id/tvFavoriteItems"
            android:layout_marginTop="60sp"
            android:layout_marginLeft="20sp"
            android:layout_marginBottom="20sp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="@font/adamina"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shared Items"
            android:id="@+id/tvSharedItems"
            android:layout_marginTop="90sp"
            android:layout_marginLeft="20sp"
            android:layout_marginBottom="20sp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="@font/adamina"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order List"
            android:id="@+id/tvOrderList"
            android:layout_marginTop="120sp"
            android:layout_marginLeft="20sp"
            android:layout_marginBottom="20sp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="@font/adamina"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        app:cardElevation="12sp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  Others "
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20sp"
            android:fontFamily="@font/adamina"
            android:textStyle="bold"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category"
            android:id="@+id/tvCategory"
            android:layout_marginTop="60sp"
            android:layout_marginLeft="20sp"
            android:layout_marginBottom="20sp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="@font/adamina"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:id="@+id/tvSettings"
            android:layout_marginTop="90sp"
            android:layout_marginLeft="20sp"
            android:layout_marginBottom="20sp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="@font/adamina"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rate Us"
            android:id="@+id/tvRateUs"
            android:layout_marginTop="120sp"
            android:layout_marginLeft="20sp"
            android:layout_marginBottom="20sp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="@font/adamina"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Share App"
            android:id="@+id/tvShareApp"
            android:layout_marginTop="150sp"
            android:layout_marginLeft="20sp"
            android:layout_marginBottom="20sp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="@font/adamina" />

    </androidx.cardview.widget.CardView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/accountbg"/>
    </LinearLayout>
</ScrollView>