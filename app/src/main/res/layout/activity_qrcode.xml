<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QRCodeActivity"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150sp"
        app:cardBackgroundColor="@color/dark_brown">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Receive Money"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="30sp"
            android:fontFamily="@font/adamina"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="From any UPI app"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginTop="60sp"
            android:layout_marginLeft="20sp"
            android:fontFamily="@font/adamina"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:orientation="horizontal"
            android:layout_marginTop="90sp"
            android:background="@color/white"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:weightSum="4">

            <ImageView
                android:layout_width="0sp"
                android:layout_height="40sp"
                android:layout_weight="1"
                android:src="@drawable/phonepaylogo"
                android:layout_gravity="center_vertical"/>
            <ImageView
                android:layout_width="0sp"
                android:layout_height="30sp"
                android:src="@drawable/bhimlogo"
                android:layout_weight="1"
                android:padding="6sp"/>
            <ImageView
                android:layout_width="0sp"
                android:layout_height="30sp"
                android:src="@drawable/googlepay"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="0sp"
                android:layout_height="30sp"
                android:layout_weight="1"
                android:src="@drawable/paytmlogo"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_width="200sp"
        android:layout_height="90sp"
        android:src="@drawable/logo"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10sp"
        android:fontFamily="@font/adamina"
        android:text="Scan this QR for Payments"
        android:textAlignment="center"
        android:textColor="@color/dark_brown"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="300sp"
        android:layout_height="300sp"
        android:id="@+id/ivQRCode"
        android:layout_gravity="center"
        android:background="@color/dark_brown"
        android:padding="10sp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="300sp"
        android:layout_height="40sp"
        android:id="@+id/cvShareQR"
        android:layout_gravity="center"
        android:layout_margin="20sp"
        app:cardBackgroundColor="@color/dark_brown">
    <ImageView
        android:layout_width="30sp"
        android:layout_height="40sp"
        android:src="@drawable/icon_share"
        android:layout_marginLeft="60sp"
        android:layout_gravity="center_vertical"/>

    <TextView
        android:layout_width="300sp"
        android:layout_height="40sp"
        android:text=" Share QR "
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center"
        android:fontFamily="@font/adamina" />
    </androidx.cardview.widget.CardView>
</LinearLayout>